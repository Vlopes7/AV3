import { useState } from 'react';
import { useNavigate } from 'react-router-dom';

function Login() {
  const [email, setEmail] = useState('');
  const navigate = useNavigate();

  const handleLogin = (e: React.FormEvent) => {
    e.preventDefault();
    // Em um app real, aqui você validaria o usuário e senha.
    // Por simplicidade, vamos apenas navegar se o email for preenchido.
    if (email) {
      navigate('/welcome');
    } else {
      alert('Por favor, preencha o campo de e-mail.');
    }
  };

  return (
    <div className="card">
      <h1>Página de Login</h1>
      <form onSubmit={handleLogin} style={{ display: 'flex', flexDirection: 'column', gap: '1rem', alignItems: 'center' }}>
        <input
          type="email"
          value={email}
          onChange={(e) => setEmail(e.target.value)}
          placeholder="Digite seu e-mail"
        />
        <button type="submit">Entrar</button>
      </form>
    </div>
  );
}

export default Login;